@{
    ViewBag.Title = "Contact";
}
    <div class="site-wrapper-reveal">
        <!--====================  Conact us Section Start ====================-->
        <div class="contact-us-section-wrappaer section-space--pt_100 section-space--pb_70">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="conact-us-wrap-one mb-30">
                            <h3 class="heading">To make requests for <br>further information, <br><span class="text-color-primary">contact us</span> via our social channels. </h3>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="contact-form-wrap">



                            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @id = "contact-form" }))
                            {
                                <div class="contact-form">
                                    <div class="contact-input">
                                        <div class="contact-inner">
                                            @Html.TextBox("con_name", null, new { @placeholder = " Name *", type = "text" })
                                        </div>
                                        <div class="contact-inner">
                                            @Html.TextBox("con_email", null, new { @placeholder = " Email *", type = "email" })
                                        </div>
                                    </div>
                                    <div class="contact-inner">
                                        @Html.TextBox("con_subject", null, new { @placeholder = " Subject *", type = "text" })
                                    </div>
                                    <div class="contact-inner contact-message">
                                        @Html.TextArea("con_message", null, new { @placeholder = "Please describe what you need." })
                                    </div>
                                    <div class="submit-btn mt-20">
                                        <button class="ht-btn ht-btn-md" type="submit">Send message</button>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
